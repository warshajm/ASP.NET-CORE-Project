@model eCommerce.Models.CartViewModel

<h1>Shopping Cart</h1>

<table class="table">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CartItems)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.Quantity</td>
                <td>@item.Price.ToString("C")</td>
                <td>@item.Total.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<h3>Total Price: @Model.TotalPrice.ToString("C")</h3>
