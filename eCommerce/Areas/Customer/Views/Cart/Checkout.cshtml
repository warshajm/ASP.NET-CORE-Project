@model eCommerce.Models.CartViewModel

<h1>Checkout</h1>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">
        @TempData["ErrorMessage"]
    </div>
}
<table class="table mt-4 table-responsive">
    <thead>
        <tr>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.CartItems)
        {
            <tr>
                <td>@item.ProductName</td>
                <td>@item.Quantity</td>
                <td>@item.Price.ToString("C")</td>
                <td>@item.Total.ToString("C")</td>
            </tr>
        }
    </tbody>
</table>

<h5>Sub-Total: @Model.Subtotal.ToString("C")</h5>
<h6>Tax (13%): @Model.Tax.ToString("C")</h6>
<h5>Total Price: @Model.TotalWithTax.ToString("C")</h5>

<form method="post" asp-action="Checkout">
    <div class="form-group">
        <label for="fullName">Full Name</label>
        <input type="text" class="form-control" id="fullName" name="FullName" required />
    </div>
    <div class="form-group">
        <label for="address">Address</label>
        <input type="text" class="form-control" id="address" name="Address" required />
    </div>
    <div class="form-group">
        <label for="city">City</label>
        <input type="text" class="form-control" id="city" name="City" required />
    </div>
    <div class="form-group">
        <label for="state">State</label>
        <input type="text" class="form-control" id="state" name="State" required />
    </div>
    <div class="form-group">
        <label for="zipCode">Zip Code</label>
        <input type="text" class="form-control" id="zipCode" name="ZipCode" required />
    </div>
    <div class="form-group">
        <label for="paymentMethod">Payment Method</label>
        <select class="form-control" id="paymentMethod" name="PaymentMethod" required>
            <option value="CreditCard">Credit Card</option>
            <option value="PayPal">PayPal</option>
        </select>
    </div>
    <div class="form-group">
        <label for="cardNumber">Card Number (if Credit Card)</label>
        <input type="text" class="form-control" id="cardNumber" name="CardNumber" />
    </div>
    <div class="form-group">
        <label for="cardExpiry">Card Expiry Date (if Credit Card)</label>
        <input type="text" class="form-control" id="cardExpiry" name="CardExpiry" />
    </div>
    <div class="form-group">
        <label for="cardCVV">Card CVV (if Credit Card)</label>
        <input type="text" class="form-control" id="cardCVV" name="CardCVV" />
    </div>
    <button type="submit" class="btn btn-primary">Complete Purchase</button>
</form>
