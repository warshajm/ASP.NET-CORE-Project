@model IEnumerable<eCommerce.ViewModels.ProductViewModel>
@{
    ViewData["Title"] = "Home Page";
}

<section class="py-5 py-md-7 py-lg-8 mt-5 mb-5">
    <div class="row align-items-center gx-5">
        <div class="col-md-6 d-flex flex-column justify-center mb-4 mb-md-0">
            <div class="text-center text-md-start mb-4 mb-md-0 p-3">
                <h1 class="display-3 fw-bold mb-2">Coffeegenic</h1>
                <p class="lead text-muted">
                    Immerse yourself in the rich aroma and comforting warmth of Coffeegenic, your local haven for premium coffee and delightful pastries.
                </p>
            </div>
        <a class="btn btn-primary btn-lg w-100" href="@Url.Action("Index", "Shop")" role="button" style="width: 200px;">Explore Our Coffee</a>
        </div>
        <div class="col-md-6">
            <img src="/images/hero.jpg" class="img-fluid" alt="Hero">
        </div>
    </div>
</section>
<section class="p-5 py-5 py-md-7 py-lg-8 section">
    <div class="text-center mb-5">
    <h2 class="display-4 fw-bold">Featured Selections</h2>
        <p class="lead text-muted">
            Discover our curated collection of specialty coffee blends and delectable treats crafted to perfection.
        </p>
    </div>
    <div class="row gx-5">
        @foreach (var product in Model)
        {
            <div class="col-md-4">
            <div class="card m-4 h-100">
                    <img src="@Url.Content("~/images/products/" + product.Image)" class="card-img-top" alt="@product.Name">
                    <div class="card-body text-center">
                        <h5 class="card-title">@product.Name</h5>
                        <p class="card-text">@product.Description</p>
                        <p class="card-text">@product.Price.ToString("C")</p>
                        <a href="@Url.Action("Details", "Shop", new { id = product.Id })" class="btn btn-primary">View Details</a>
                    </div>
                </div>
            </div>
        }
    </div>
</section>
<section id="about" class="py-5 py-md-7 py-lg-8 mt-5 mb-5">
    <div class="row align-items-center gx-5">
        <div class="col-md-6 mb-4 mb-md-0">
            <img src="/images/about.jpg" class="img-fluid" alt="About Coffeegenic">
        </div>
        <div class="col-md-6">
            <div class="text-center text-md-start mb-4 mb-md-0 p-3">
                <h2 class="display-4 fw-bold mb-3">About Coffeegenic</h2>
                <p class="lead text-muted">
                    Coffeegenic was born out of late-night study sessions, fueled by countless cups of coffee. As we searched for the perfect brew to keep us going, we realized there was more to coffee than just caffeine. We wanted to understand the journey of each bean – from the farms where they are grown to the moment they reach our cup. This curiosity led us to explore the world of coffee, and learn about the art of roasting and brewing.
                </p>
                <p class="lead text-muted">
                    Coffeegenic is powered by a small but passionate team of coffee lovers. We are:<br/>
                    Sushant Shrestha,<br />
                    Sahir Prajapati, and<br />
                    Warsha Jhankri
                </p>
            </div>
        </div>
    </div>
</section>
<section id="contact" class="p-5 py-5 py-md-7 py-lg-8 section mb-5">
    <div class="text-center mb-5">
    <h2 class="display-4 fw-bold">Get in Touch</h2>
        <p class="lead text-muted">
        We’d love to hear from you! Whether you have questions, feedback, or just want to say hello, feel free to drop us a message.
        </p>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form>
                <div class="mb-3">
                    <input type="text" class="form-control" id="name" placeholder="Name">
                </div>
                <div class="mb-3">
                    <input type="email" class="form-control" id="email" placeholder="Email">
                </div>
                <div class="mb-3">
                    <textarea class="form-control" id="message" rows="4" placeholder="Message"></textarea>
                </div>
            <button type="submit" class="btn btn-primary btn-lg w-100">Send Message</button>
            </form>
        </div>
    </div>
</section>

